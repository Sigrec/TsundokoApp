					<TextBlock Text="Series Card Button BG" FontSize="13" FontWeight="Bold" Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}"/>
					<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2">
						<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" Margin="2">	
							<cp:ColorPickerButton Margin="2" Cursor="Hand" HorizontalAlignment="Left" Height="20" Width="200"/>
						</Border>
					</Border>
				</StackPanel>
				<StackPanel Spacing="5" VerticalAlignment="Center" Margin="7">
					<TextBlock Text="Series Card Button BG (Hover)" FontSize="13" FontWeight="Bold" Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}"/>
					<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2">
						<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" Margin="2">	
							<cp:ColorPickerButton Margin="2" Cursor="Hand" HorizontalAlignment="Left" Height="20" Width="200"/>
						</Border>
					</Border>
				</StackPanel>
				<StackPanel Spacing="5" VerticalAlignment="Center" Margin="7">
					<TextBlock Text="Series Card Button Border" FontSize="13" FontWeight="Bold" Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}"/>
					<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2">
						<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" Margin="2">	
							<cp:ColorPickerButton Margin="2" Cursor="Hand" HorizontalAlignment="Left" Height="20" Width="200"/>
						</Border>
					</Border>
				</StackPanel>
				<StackPanel Spacing="5" VerticalAlignment="Center" Margin="7">
					<TextBlock Text="Series Card Button Border (Hover)" FontSize="13" FontWeight="Bold" Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}"/>
					<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2">
						<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" Margin="2">	
							<cp:ColorPickerButton Margin="2" Cursor="Hand" HorizontalAlignment="Left" Height="20" Width="200"/>
						</Border>
					</Border>
				</StackPanel>
				<StackPanel Spacing="5" VerticalAlignment="Center" Margin="7">
					<TextBlock Text="Series Card Button Icon" FontSize="13" FontWeight="Bold" Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}"/>
					<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2">
						<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" Margin="2">	
							<cp:ColorPickerButton Margin="2" Cursor="Hand" HorizontalAlignment="Left" Height="20" Width="200"/>
						</Border>
					</Border>
				</StackPanel>
				<StackPanel Spacing="5" VerticalAlignment="Center" Margin="7">
					<TextBlock Text="Series Card Button Icon (Hover)" FontSize="13" FontWeight="Bold" Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}"/>
					<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2">
						<Border Background="{Binding CurrentTheme.MenuButtonBGColor, Converter={StaticResource ConvertColor}}" BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" Margin="2">	
							<cp:ColorPickerButton Margin="2" Cursor="Hand" HorizontalAlignment="Left" Height="20" Width="200"/>
						</Border>
					</Border>
				</StackPanel>
			</WrapPanel>
		</StackPanel>
		<StackPanel HorizontalAlignment="Center">
			<TextBlock Text="Save/Change Theme" FontSize="30" FontWeight="Bold" Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}" TextAlignment="Center"/>
			<StackPanel Orientation="Horizontal" Spacing="5" Margin="0,10,0,0">
				<TextBox Name="NewThemeName"
						 Width="250"
						 FontSize="15"
						 Background="{DynamicResource 'Menu Button BG'}"
						 BorderBrush="{DynamicResource 'Menu Button Icon/Text'}"
						 BorderThickness="2"/>
				<Button FontSize="15" 
						FontWeight="Bold" 
						Background="{DynamicResource 'Menu Button BG'}" 
						BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" 
						Foreground="{DynamicResource 'Menu Button Icon/Text'}" 
						HorizontalAlignment="Center" 
						Content="Save" 
						Click="SaveNewTheme"/>
				<ComboBox Name="ThemeSelector"
						  SelectionChanged="ChangeMainTheme"
						  Items="{Binding UserThemes}"
						  Width="150"
						  Height="35"
						  SelectedItem="{Binding CurrentTheme}"
						  Background="{DynamicResource 'Menu Button BG'}"
						  BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}"
						  BorderThickness="2"
						  Foreground="{DynamicResource 'Menu Button Icon/Text'}"
						  Margin="10,0,0,0">
				    <ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock FontSize="15" 
									   FontWeight="Bold" 
									   Foreground="{Binding CurrentTheme.MenuTextColor, Converter={StaticResource ConvertColor}}" 
									   Text="{Binding ThemeName}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
				<Button FontSize="20" 
						FontWeight="Bold" 
						Background="{DynamicResource 'Menu Button BG'}" 
						BorderBrush="{Binding CurrentTheme.MenuButtonBorderColor, Converter={StaticResource ConvertColor}}" BorderThickness="2" 
						Foreground="{DynamicResource 'Menu Button Icon/Text'}" 
						HorizontalAlignment="Center" 
						i:Attached.Icon="fa-xmark" 
						Click="RemoveSavedTheme"/>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</Window>
